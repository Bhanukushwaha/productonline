<!-- Section: Design Block -->
<section class="">
  <!-- Jumbotron -->
  <div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: hsl(0, 0%, 96%)">
    <div class="container">
      <div class="row gx-lg-5 align-items-center">
        <div class="col-lg-2"></div>
        <div class="col-lg-9 mb-5 mb-lg-0">
          <div class="card">
            <h2>Log_in</h2>
            <div class="card-body">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                <div class="form-outline mb-4">
                  <label class="form-label" for="form3Example3">Email address</label>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email",class: 'form-control' %>
                </div>
                <!-- Password input -->
                <div class="form-outline mb-4"> 
                  <label class="form-label" for="form3Example4">Password</label>
                  <%= f.password_field :password, autocomplete: "current-password",class: 'form-control' %>
                </div>
                <!-- Checkbox -->               
                  <% if devise_mapping.rememberable? %>
                    <div class="form-check d-flex mb-4">
                      <%= f.check_box :remember_me ,class: "form-check-input me-2" %>
                      <%= f.label :remember_me, class: "form-check-label" %>
                    </div>
                  <% end %>
                  <!-- Submit button -->
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-outline">
                        <%= f.submit "Log in", class: 'btn btn-success btn-block mb-4', style: "color:white;" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                      </div>
                    </div>
                    <div class="col-md-6 mb-4">
                      <div class="form-outline">                      
                        <%= link_to "Sign up", new_registration_path(resource_name),:class => 'btn btn-primary btn-block mb-4', style: "color:white;" %>
                      </div>
                    </div>
                  </div>
                  <!-- Register buttons -->
                  <p class="text-center">
                    <%= link_to "Forgot your password?", new_password_path(resource_name), :class => 'btn btn-danger mx-1' %>                  
                  </p>
                </div>                                 
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->
