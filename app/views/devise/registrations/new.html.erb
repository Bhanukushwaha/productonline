<section class="text-center">
  <!-- Background image -->
  <div class="p-5 bg-image" style="
        background-image: url('https://mdbootstrap.com/img/new/textures/full/171.jpg');
        height: 150px;
        "></div>
  <!-- Background image -->

  <div class="card mx-4 mx-md-5 shadow-5-strong" style="
        margin-top: -100px;
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        ">
    <div class="card-body py-5 px-md-5">
      <div class="row d-flex justify-content-center">
        <div class="col-lg-8">
          <h2 class="fw-bold mb-5">Sign up now</h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %> 
            <!-- 2 column grid layout with text inputs for the first and last names -->
            <div class="row">
              <div class="col-md-6 mb-4">
                <div class="form-outline">
                  <label class="form-label" for="form3Example1">First name</label>
                  <%= f.text_field :first_name, placeholder: "First name", class: 'form-control' %>
                </div>
              </div>
              <div class="col-md-6 mb-4">
                <div class="form-outline">
                  <label class="form-label" for="form3Example2">Last name</label>
                  <%= f.text_field :last_name, placeholder: "Last name", class: 'form-control' %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 mb-4">
                <div class="form-outline">
                  <label class="form-label" for="form3Example3">Email address</label>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter your Email", class: 'form-control' %>
                </div>
              </div>
              <div class="col-md-6 mb-4">
                <div class="form-outline">
                  <label class="form-label" for="form3Example2">Phono_Number</label>
                  <%= f.text_field :phone_no, placeholder: "Phone number", class: 'form-control' %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 mb-4">
                <div class="form-outline">
                  <label class="form-label" for="form3Example4">Password</label>
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                    <%= f.password_field :password, autocomplete: "new-password", placeholder: "password", class: 'form-control' %>
                </div>
              </div>
              <div class="col-md-6 mb-4">
                <div class="form-outline">
                  <label class="form-label" for="form3Example2">password_confirmation</label>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirmation password", class: 'form-control' %>
                </div>
              </div>
            </div>

            <!-- Checkbox -->
            <div class="form-check d-flex mb-4">
              <input class="form-check-input me-2" type="checkbox" value="" id="form2Example33" checked />
              <label class="form-check-label" for="form2Example33">
                Subscribe to our newsletter
              </label>
            </div>

            <!-- Submit button -->
           
            <%= f.submit "Sign up", :class => 'btn btn-secondary btn-block mb-4' %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            
            <%= link_to "Log in", new_session_path(resource_name),  :class => 'btn btn-success ' %>

            <!-- Register buttons -->
            
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Section: Design Block -->