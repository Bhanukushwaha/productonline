<h1>amazon</h1>
<p id="notice"><%= notice %></p>
<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>email</th>
			<th>mobile_No</th>
			<th>date</th>			
			<th>address</th>
			<th>active</th>
			<th colspan="3" ></th>
		</tr>
	</thead>	
	<tbody>
	   <% @amazons.each do |amazon| %>
			<tr>
				<td><%= amazon.name %></td>
				<td><%= amazon.email %></td>
				<td><%= amazon.mobile_no %></td>				
				<td><%= amazon.date %></td>
				<td><%= amazon.address %></td>
				<td><%= amazon.status %></td>
				<td><%= link_to 'Show', amazon %></td>
				<td><%= link_to 'edit', edit_amazon_path(amazon) %></td>
     	        <td><%= link_to 'Destroy', amazon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= link_to 'New amazons' , new_amazon_path %>
