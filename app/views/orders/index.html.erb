<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>      
      <th>Image</th>
      <th>Price</th>
      <th>Size</th>
      <th>Status</th>
      <th>Full Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.Title %></td>
        <td><%= order.Image %></td>        
        <td><%= order.price %></td>
        <td><%= order.Size %></td>
        <td><%= order.Status %></td>
        <td><%= order.Full Address %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

